<dx:ThemedWindow 
    x:Class="ClipboardPilot.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    Title="클립보드 파일럿" 
    Height="750" Width="1200"
    WindowStartupLocation="CenterScreen"
    Background="White"
    WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004578"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E1E4E8"/>
            <Setter Property="Foreground" Value="#24292E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1D5DA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#586069"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E4E8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F6F8FA"/>
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="TopMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <ContentPresenter ContentSource="Header" 
                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                <Popup x:Name="PART_Popup"
                                       IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       Placement="Bottom"
                                       AllowsTransparency="True">
                                    <Border Background="White" 
                                            BorderBrush="#E1E4E8" 
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="5">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#000000" 
                                                            Direction="270" 
                                                            ShadowDepth="2" 
                                                            BlurRadius="8" 
                                                            Opacity="0.2"/>
                                        </Border.Effect>
                                        <ItemsPresenter/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SubMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="#24292E"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="30,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2"
                                Margin="2">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#60FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C42B1C"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar -->
        <Border Grid.Row="0" 
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#0078D4" Offset="0"/>
                    <GradientStop Color="#0063B1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <Grid Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- App Icon & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="📋" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="클립보드 파일럿" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Clipboard Pilot" 
                                   Foreground="#B3FFFFFF" 
                                   FontSize="10"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Window Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Minimize Button (E921) -->
                    <Button Content="&#xE921;" 
                            Style="{StaticResource TitleBarButtonStyle}"
                            Click="Minimize_Click"
                            ToolTip="최소화 (Minimize)"/>
                    <!-- Maximize/Restore Button (E922/E923) -->
                    <Button x:Name="MaximizeRestoreButton"
                            Content="&#xE922;" 
                            Style="{StaticResource TitleBarButtonStyle}"
                            Click="Maximize_Click"
                            ToolTip="최대화 (Maximize)"/>
                    <!-- Close Button (E8BB) -->
                    <Button Content="&#xE8BB;" 
                            Style="{StaticResource CloseButtonStyle}"
                            Click="Exit_Click"
                            ToolTip="닫기 (Close)"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Menu Bar -->
        <Border Grid.Row="1" Background="#24292E" Padding="0">
            <Menu Background="Transparent" Height="35" VerticalAlignment="Center">
                <MenuItem Header="파일" Style="{StaticResource TopMenuItemStyle}">
                    <MenuItem Header="종료" Click="Exit_Click" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="편집" Style="{StaticResource TopMenuItemStyle}">
                    <MenuItem Header="복사" Command="{Binding CopyToClipboardCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Header="삭제" Command="{Binding DeleteSelectedCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Header="고정/해제" Command="{Binding TogglePinCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="보기" Style="{StaticResource TopMenuItemStyle}">
                    <MenuItem Header="새로고침" Command="{Binding SearchCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Header="필터 초기화" Command="{Binding ClearFiltersCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="필터" Style="{StaticResource TopMenuItemStyle}">
                    <MenuItem Header="오늘" Command="{Binding ShowTodayCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Header="최근 24시간" Command="{Binding ShowLast24HoursCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Header="이미지" Command="{Binding ShowImagesCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Header="텍스트" Command="{Binding ShowTextCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Header="고정 항목" Command="{Binding ShowPinnedCommand}" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="도움말" Style="{StaticResource TopMenuItemStyle}">
                    <MenuItem Header="사용법" Click="ShowHelp_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Header="단축키" Click="ShowShortcuts_Click" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
            </Menu>
        </Border>
        
        <!-- Enhanced Search Bar -->
        <Border Grid.Row="2" Background="White" Padding="20,15" 
                BorderBrush="#E1E4E8" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Icon -->
                <Border Grid.Column="0" Background="#F6F8FA" 
                        BorderBrush="#D1D5DA" BorderThickness="1,1,0,1" 
                        CornerRadius="4,0,0,4" Padding="12,0">
                    <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Search TextBox -->
                <Border Grid.Column="1" BorderBrush="#D1D5DA" BorderThickness="0,1,0,1" 
                        Background="White">
                    <Grid>
                        <TextBlock Text="검색어를 입력하세요..." 
                                   FontSize="14"
                                   Foreground="#959DA5"
                                   Padding="12,8"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding SearchText, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 Padding="12,8"
                                 FontSize="14"
                                 Foreground="#24292E"
                                 Background="Transparent">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                                <KeyBinding Key="Escape" Command="{Binding ClearFiltersCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                </Border>
                
                <!-- Search Button -->
                <Button Grid.Column="2" Content="검색" 
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource ModernButton}"
                        Margin="0,0,10,0"/>
                
                <!-- Clear Button -->
                <Button Grid.Column="3" Content="초기화" 
                        Command="{Binding ClearFiltersCommand}"
                        Style="{StaticResource SecondaryButton}"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="3" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Filter Panel -->
            <Border Grid.Column="0" Background="White" 
                    BorderBrush="#E1E4E8" BorderThickness="0,0,1,0"
                    Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="빠른 필터" 
                                   FontWeight="Bold" 
                                   FontSize="15"
                                   Foreground="#24292E"
                                   Margin="0,0,0,12"/>
                        
                        <Button Content="오늘" Click="FilterToday_Click" 
                                Style="{StaticResource FilterButton}"/>
                        <Button Content="최근 24시간" Click="FilterLast24Hours_Click" 
                                Style="{StaticResource FilterButton}"/>
                        <Button Content="이미지" Click="FilterImages_Click" 
                                Style="{StaticResource FilterButton}"/>
                        <Button Content="텍스트" Click="FilterText_Click" 
                                Style="{StaticResource FilterButton}"/>
                        <Button Content="고정됨" Click="FilterPinned_Click" 
                                Style="{StaticResource FilterButton}"/>
                        
                        <Separator Margin="0,15"/>
                        
                        <TextBlock Text="유형별 필터" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#24292E"
                                   Margin="0,10,0,8"/>
                        <ComboBox x:Name="TypeFilterComboBox"
                                  SelectionChanged="TypeFilter_SelectionChanged"
                                  Margin="0,5"
                                  Padding="8"
                                  FontSize="13">
                            <ComboBoxItem Content="전체" IsSelected="True"/>
                            <ComboBoxItem Content="텍스트"/>
                            <ComboBoxItem Content="이미지"/>
                            <ComboBoxItem Content="HTML"/>
                            <ComboBoxItem Content="파일 목록"/>
                        </ComboBox>
                        
                        <TextBlock Text="라벨별 필터" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#24292E"
                                   Margin="0,15,0,8"/>
                        <ComboBox x:Name="LabelFilterComboBox"
                                  SelectionChanged="LabelFilter_SelectionChanged"
                                  Margin="0,5"
                                  Padding="8"
                                  FontSize="13">
                            <ComboBoxItem Content="전체" IsSelected="True"/>
                            <ComboBoxItem Content="빨강"/>
                            <ComboBoxItem Content="주황"/>
                            <ComboBoxItem Content="노랑"/>
                            <ComboBoxItem Content="초록"/>
                            <ComboBoxItem Content="파랑"/>
                            <ComboBoxItem Content="보라"/>
                        </ComboBox>
                        
                        <CheckBox x:Name="PinnedOnlyCheckBox"
                                  Content="고정 항목만 보기" 
                                  Checked="PinnedOnly_Changed"
                                  Unchecked="PinnedOnly_Changed"
                                  Margin="0,15"
                                  FontSize="13"
                                  Foreground="#24292E"/>
                        
                        <Button Content="필터 적용" 
                                Click="ApplyFilters_Click"
                                Style="{StaticResource ModernButton}"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Data Grid -->
            <Border Grid.Column="1" Background="White" Padding="15">
                <dxg:GridControl ItemsSource="{Binding Items}"
                                 SelectedItem="{Binding SelectedItem}">
                    <dxg:GridControl.View>
                        <dxg:TableView AllowEditing="False" 
                                       AutoWidth="True"
                                       ShowGroupPanel="False"
                                       NavigationStyle="Row"
                                       ShowIndicator="False"
                                       AllowBestFit="True">
                            <dxg:TableView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="복사" Command="{Binding CopyToClipboardCommand}"/>
                                    <MenuItem Header="삭제" Command="{Binding DeleteSelectedCommand}"/>
                                    <Separator/>
                                    <MenuItem Header="고정/해제" Command="{Binding TogglePinCommand}"/>
                                </ContextMenu>
                            </dxg:TableView.ContextMenu>
                        </dxg:TableView>
                    </dxg:GridControl.View>
                    
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn FieldName="Type" Header="유형" Width="120"/>
                        <dxg:GridColumn FieldName="Preview" Header="미리보기" Width="450"/>
                        <dxg:GridColumn FieldName="SourceApp" Header="출처" Width="150"/>
                        <dxg:GridColumn FieldName="CreatedAt" Header="생성 시간" Width="180"/>
                        <dxg:GridColumn FieldName="Size" Header="크기" Width="100"/>
                        <dxg:GridColumn FieldName="Pinned" Header="고정" Width="80"/>
                    </dxg:GridControl.Columns>
                </dxg:GridControl>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#F6F8FA" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E1E4E8" 
                Padding="20,10"
                CornerRadius="0,0,8,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding StatusText}" 
                           FontSize="13" 
                           Foreground="#586069"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#007ACC" CornerRadius="12" Padding="10,4" Margin="0,0,10,0">
                        <TextBlock Foreground="White" FontSize="12" FontWeight="SemiBold">
                            <Run Text="전체: "/>
                            <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                        </TextBlock>
                    </Border>
                    <Border Background="#28A745" CornerRadius="12" Padding="10,4">
                        <TextBlock Foreground="White" FontSize="12" FontWeight="SemiBold">
                            <Run Text="선택: "/>
                            <Run Text="{Binding SelectedCount, Mode=OneWay}"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</dx:ThemedWindow>
